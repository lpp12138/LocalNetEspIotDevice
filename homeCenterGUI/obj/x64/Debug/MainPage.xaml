<Page x:ConnectionId='1'
    x:Class="homeCenterGUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:homeCenterGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     >
    <NavigationView x:ConnectionId='2' VerticalAlignment="Stretch" IsSettingsVisible="False" HorizontalAlignment="Stretch"                                >
        <NavigationView.MenuItems>
            <NavigationViewItem Tag="nav_Home" Icon="Home" Content="Home"/>
            <NavigationViewItemSeparator/>
            <NavigationViewItem Tag="nav_Page1" Icon="AllApps" Content="Page1"/>
            <NavigationViewItem Tag="nav_Page2" Icon="AllApps" Content="Page2"/>
            <NavigationViewItem Tag="nav_AboutPage" Icon="Emoji2" Content="About"/>
        </NavigationView.MenuItems>
        <Frame x:ConnectionId='3' x:Name="ContentFrame" Margin="24" Content="ContentFrame" FontSize="42"                                                                                      >
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </NavigationView>

</Page>

